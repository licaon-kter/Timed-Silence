<resources>

    <!-- Base application theme. -->
    <style name="BaseStyle" parent="AppTheme">
        <!-- Customize your theme here. -->

        <!-- <item name="android:statusBarColor">@color/transparent</item>
         <item name="colorControlNormal">@color/colorTextSettingbar</item>
         <item name="android:windowBackground">@color/colorBackground</item>
         <item name="android:textColor">@color/secondary_material_light</item>-->

        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>




        <!-- Transparent Actionbar -->
        <item name="android:actionBarStyle">@style/TransparentActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/TransparentActionBar</item>
    </style>

    <style name="BaseStyle.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AboutStyle" parent="AppTheme">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
    </style>

    <style name="BaseStyle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="rectangularFab">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

    <!-- ActionBar styles -->
    <style name="TransparentActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/transparent</item>
        <!-- Support library compatibility -->
        <item name="background">@color/transparent</item>
    </style>

    <style name="AddButtonCard">
        <item name="cardBackgroundColor">?attr/colorSecondaryContainer</item>
        <item name="cardCornerRadius">@dimen/cornerRadius</item>
    </style>

    <style name="primaryCard">
        <item name="cardBackgroundColor">?attr/colorPrimaryContainer</item>
        <item name="cardCornerRadius">@dimen/cornerRadius</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:tint">?attr/colorOnPrimaryContainer</item>
    </style>

    <style name="secondaryCard">
        <item name="cardBackgroundColor">?attr/colorSecondaryContainer</item>
        <item name="cardCornerRadius">@dimen/cornerRadius</item>
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
        <item name="android:tint">?attr/colorOnSecondaryContainer</item>
    </style>

    <style name="tertiaryCard">
        <item name="cardBackgroundColor">?attr/colorTertiaryContainer</item>
        <item name="cardCornerRadius">@dimen/cornerRadius</item>
        <item name="android:textColor">?attr/colorOnTertiaryContainer</item>
        <item name="android:tint">?attr/colorOnTertiaryContainer</item>
    </style>

</resources>
