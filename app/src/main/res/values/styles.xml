<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="colorControlNormal">@color/colorTextSettingbar</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/secondary_material_light</item>
        <item name="android:navigationBarColor">?attr/android:colorBackground</item>


        <!-- Transparent Actionbar -->
        <item name="android:actionBarStyle">@style/TransparentActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/TransparentActionBar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="rectangularFab">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

    <!-- ActionBar styles -->
    <style name="TransparentActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/transparent</item>
        <!-- Support library compatibility -->
        <item name="background">@color/transparent</item>
    </style>

</resources>
