<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/imageView_volume_state" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_schedule_row_title" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_volume_state" android:layout_marginStart="16dp"/>

    <TextView
            android:text="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_schedule_row_time_start" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_schedule_row_title"
            app:layout_constraintStart_toEndOf="@+id/imageView_volume_state" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"/>
    <TextView
            android:text="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_schedule_row_time_end"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            android:layout_marginStart="8dp" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_schedule_row_title"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"/>
    <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" app:layout_constraintStart_toEndOf="@+id/textView_schedule_row_time_start"
            android:layout_marginStart="8dp" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_schedule_row_title"/>


    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete_schedule_element" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:src="@drawable/ic_delete_black_24dp" android:background="@null"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_schedule_element" app:layout_constraintEnd_toStartOf="@+id/delete_schedule_element"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_edit_black_24dp" android:background="@null" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_volume_state" android:id="@+id/linearLayout4"
            app:layout_constraintStart_toEndOf="@+id/imageView_volume_state"
            app:layout_constraintEnd_toStartOf="@+id/edit_schedule_element" android:layout_marginEnd="8dp">
        <TextView
                android:text="@string/mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/mon" android:layout_weight="1"
                android:textSize="10sp"/>
        <TextView
                android:text="@string/tue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tue" android:layout_weight="1"
                android:textSize="10sp"/>
        <TextView
                android:text="@string/wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/wed" android:layout_weight="1"
                android:textSize="10sp"/>
        <TextView
                android:text="@string/thu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/thu" android:layout_weight="1"
                android:textSize="10sp"/>
        <TextView
                android:text="@string/fri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fri" android:layout_weight="1"
                android:textSize="10sp"/>
        <TextView
                android:text="@string/sat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/sat" android:layout_weight="1"
                android:textSize="10sp"/>
        <TextView
                android:text="@string/sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/sun" android:layout_weight="1"
                android:textSize="10sp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>