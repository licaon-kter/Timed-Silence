<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SettingsVolumeActivity">

    <TextView
            android:text="@string/volume_settings_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLabelSliderVolumeNotifications"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBarVolumeMusic"/>
    <TextView
            android:text="100 %"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:id="@+id/textViewPercentVolumeNotifications" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewLabelSliderVolumeNotifications"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarVolumeMusic"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewLabelSliderVolumeMusic" android:layout_marginTop="12dp"
            app:layout_constraintEnd_toStartOf="@+id/textViewPercentVolumeMusic" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="100 %"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:id="@+id/textViewPercentVolumeMusic" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewLabelSliderVolumeMusic" android:layout_marginEnd="8dp"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarVolumeNotifications"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewLabelSliderVolumeNotifications"
            app:layout_constraintEnd_toStartOf="@+id/textViewPercentVolumeNotifications"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/volume_settings_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLabelSliderVolumeMusic" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="@string/volume_settings_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLabelSliderVolumeAlarm"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBarVolumeNotifications"/>
    <TextView
            android:text="100 %"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:id="@+id/textViewPercentVolumeAlarm" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewLabelSliderVolumeAlarm"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarVolumeAlarm"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewLabelSliderVolumeAlarm"
            app:layout_constraintEnd_toStartOf="@+id/textViewPercentVolumeAlarm" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/volume_settings_ringer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLabelSliderVolumeRinger"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/seekBarVolumeAlarm"/>
    <TextView
            android:text="100 %"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:id="@+id/textViewPercentVolumeRinger"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textViewLabelSliderVolumeRinger"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarVolumeRinger"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewLabelSliderVolumeRinger"
            app:layout_constraintEnd_toStartOf="@+id/textViewPercentVolumeRinger" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="One of your Volumes is below 15%. Depending on your device, it may not be audible."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/warning_low_volume" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginTop="200dp" app:layout_constraintTop_toBottomOf="@+id/seekBarVolumeRinger"
            android:textColor="@color/text_warning" android:textSize="18sp" android:textStyle="bold"
            tools:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>