<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="@dimen/widget_margin">

    <LinearLayout
            android:id="@+id/playpausewidget_running"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_background_circle_green"
            android:gravity="center"
            android:clickable="true"
            android:layout_centerInParent="true">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_pause_black_24dp"/>

        <TextView
                android:text="@string/timecheck_running"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/playpausewidget_running_text"
                android:textAlignment="center" android:textColor="@android:color/background_light"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/playpausewidget_paused"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_background_circle_orange"
            android:gravity="center"
            android:clickable="true"
            android:layout_centerInParent="true">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_pause_black_24dp"/>
        <TextView
                android:text="@string/timecheck_paused"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/playpausewidget_paused_text"
                android:textAlignment="center" android:textColor="@android:color/background_light"/>

    </LinearLayout>
    <LinearLayout
            android:id="@+id/playpausewidget_stopped"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_background_circle_red"
            android:gravity="center"
            android:clickable="true"
            android:layout_centerInParent="true">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_pause_black_24dp"/>
        />
        <TextView
                android:text="@string/timecheck_stopped"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/playpausewidget_stopped_text"
                android:textAlignment="center" android:textColor="@android:color/background_light"/>

    </LinearLayout>

</RelativeLayout>